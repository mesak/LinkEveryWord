{
  "name": "link-every-word-extension",
  "displayName": "LinkEveryWord Extension",
  "version": "0.0.1",
  "description": "Chrome extension for quick text search and linking",
  "author": "Mesak <mesakey@gmail.com>",
  "scripts": {
    "dev": "plasmo dev",
    "build": "plasmo build",
    "package": "plasmo package"
  },
  "dependencies": {
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-slot": "^1.2.3",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-react": "^0.542.0",
    "plasmo": "0.90.5",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "tailwind-merge": "^3.3.1",
    "tailwindcss-animate": "^1.0.7"
  },
  "devDependencies": {
    "@ianvs/prettier-plugin-sort-imports": "4.1.1",
    "@types/chrome": "0.0.258",
    "@types/node": "20.11.5",
    "@types/react": "18.2.48",
    "@types/react-dom": "18.2.18",
    "autoprefixer": "^10.4.21",
    "postcss": "^8.5.6",
    "prettier": "3.2.4",
    "tailwindcss": "~3.4.0",
    "typescript": "5.3.3"
  },
  "manifest": {
    "host_permissions": [
      "https://*/*",
      "http://*/*"
    ],
    "permissions": [
      "storage",
      "activeTab",
      "scripting",
      "sidePanel"
    ],
    "commands": {
      "open-search-panel": {
        "suggested_key": {
          "default": "Ctrl+Shift+F"
        },
        "description": "Open LinkEveryWord search panel",
        "global": true
      }
    },
    "side_panel": {
      "default_path": "sidepanel.html"
    },
    "options_page": "options.html",
    "default_locale": "en"
  }
}
